# Server Configuration
AUTH_SERVER_PORT=8081
SERVER_PORT=8081

PRIVATE_KEY=

# PostgreSQL Configuration
AUTH_POSTGRES_CONTAINER_NAME=auth-postgres
AUTH_POSTGRES_DB=auth_db
AUTH_POSTGRES_USER=auth_user
AUTH_POSTGRES_PASSWORD=auth_password
POSTGRESQL_HOST=auth-postgres
POSTGRESQL_EXTERNAL_PORT=5432
POSTGRESQL_MAX_IDLE_CONNS=10
POSTGRESQL_MAX_OPEN_CONNS=100
POSTGRESQL_CONN_MAX_LIFETIME=3600

# Redis Configuration
REDIS_HOST=auth-redis
REDIS_EXTERNAL_PORT=6379
REDIS_PASSWORD=auth_password
REDIS_DB=0
REDIS_DIAL_TIMEOUT=5
REDIS_READ_TIMEOUT=3
REDIS_WRITE_TIMEOUT=3
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5

# JWT Configuration
JWT_ACCESS_TOKEN_TTL_MINUTES=15
JWT_REFRESH_TOKEN_TTL_DAYS=7
JWT_REFRESH_TOKEN_REMEMBER_ME_TTL_DAYS=30

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:password@localhost:5672/
RABBITMQ_EXCHANGE=exchange
RABBITMQ_NEW_USERS_QUEUE=new_users_queue
RABBITMQ_PUBLISH_TIMEOUT_SECONDS=3

# OAuth 2.0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
OTP_EXPIRATION_MINUTES=5